    private void btnhapusActionPerformed(java.awt.event.ActionEvent evt) {                                         
        display.setText("");
        angka1= 0;
        angka2=0;
        total=0;
        angka="";
    }                                        

    private void btnkomaActionPerformed(java.awt.event.ActionEvent evt) {                                        
        angka +=",";
        display.setText(angka);
        
    }                                       

